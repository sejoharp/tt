<%- model_class = Interval.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:start) %></th>
      <th><%= model_class.human_attribute_name(:stop) %></th>
      <th>difference</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @intervals.each do |interval| %>
      <tr>
        <td><%= link_to interval.id, interval_path(interval) %></td>
        <td><%= interval.start %></td>
        <td><%= interval.stop %></td>
        <td><%= interval.diff %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_interval_path(interval), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      interval_path(interval),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_interval_path,
            :class => 'btn btn-primary' %>
