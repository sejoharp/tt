<%= form_for @interval, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :start, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start, :value => format_datetime_secure(@interval.start),
        :class => 'datetimepicker' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :stop, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :stop, :value => format_datetime_secure(@interval.stop), 
        :class => 'datetimepicker' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                today_intervals_path, :class => 'btn' %>
  </div>
<% end %>
