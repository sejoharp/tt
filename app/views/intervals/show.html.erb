<%- model_class = @interval.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:start) %>:</strong></dt>
  <dd><%= format_datetime_depending_on_date @interval.start %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stop) %>:</strong></dt>
  <dd><%= format_datetime_depending_on_date @interval.stop %></dd>
  <dt><strong>difference:</strong></dt>
  <dd><%= format_safe_duration nil,@interval.diff %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              intervals_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_interval_path(@interval), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              interval_path(@interval),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
